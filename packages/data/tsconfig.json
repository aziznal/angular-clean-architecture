{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",

        "module": "CommonJS",

        "outDir": "./build/",

        "declaration": true,
        "composite": true,

        "declarationMap": true,
        "tsBuildInfoFile": "build/.tsbuildinfo",

        "paths": {
            "require": ["tsconfig-paths/register"],
            "@domain/*": ["../domain/*"]
        }
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],

    "references": [
        {
            "path": "../domain/"
        }
    ]
}
